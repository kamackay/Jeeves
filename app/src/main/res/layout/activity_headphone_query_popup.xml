<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/headphone_popup_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/adderall_popup_back"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.popups.HeadphoneQueryPopup">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="75sp"
        android:contentDescription="@string/text_jeevesImage"
        android:paddingBottom="15sp"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/headphone_popup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15sp"
        android:text="@string/headphone_popup_title"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten">

        <TextView
            android:id="@+id/headphonePopup_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/fifteen" />

        <Button
            android:id="@+id/headphone_popup_fullButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:minWidth="@dimen/seventyFive"
            android:onClick="clickFull"
            android:text="@string/text_full"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/headphone_popup_partialButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:minWidth="@dimen/seventyFive"
            android:onClick="clickPartial"
            android:text="@string/text_partial"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</LinearLayout>
