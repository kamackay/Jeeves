<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#555555"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/five"
    android:paddingEnd="@dimen/zero"
    android:paddingStart="@dimen/ten"
    android:paddingTop="@dimen/five">

    <ImageView
        android:id="@+id/notification_image"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:contentDescription="@string/text_jeevesImage"
        android:paddingEnd="@dimen/five"
        android:paddingStart="@dimen/zero"
        android:scaleType="fitCenter"
        android:src="@drawable/icon" />


    <Button
        android:id="@+id/notification_buttonA"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:contentDescription="@string/desc_notification_AButton"
        android:text="@string/text_home"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/twelve" />

    <Button
        android:id="@+id/notification_buttonB"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:contentDescription="@string/desc_notification_AButton"
        android:text="@string/text_home"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/twelve" />

    <Button
        android:id="@+id/notification_buttonC"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:contentDescription="@string/desc_notification_AButton"
        android:text="@string/text_home"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/twelve" />

    <Button
        android:id="@+id/notification_buttonD"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:contentDescription="@string/desc_notification_AButton"
        android:text="@string/text_home"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/twelve" />

    <LinearLayout
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingEnd="@dimen/five"
        android:paddingStart="@dimen/zero">

        <TextView
            android:id="@+id/notification_text_adderallSoFar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/notification_text_timeSinceAdderall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_idk"
            android:textAlignment="center"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>