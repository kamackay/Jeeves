<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200sp"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="keithapps.mobile.com.jeeves.HeadphoneQueryPopup">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="75sp"
        android:paddingBottom="15sp"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/headphone_popup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15sp"
        android:text="@string/headphone_popup_title"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:onClick="clickFull"
            android:paddingTop="15sp"
            android:text="@string/text_full"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="0sp"
            android:layout_height="15sp"
            android:layout_weight="1" />

        <Button
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:onClick="clickPartial"
            android:paddingTop="15sp"
            android:text="@string/text_partial"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>
